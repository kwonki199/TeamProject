<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search.SearchActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="목록 설정"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/search_cancelBtn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="X"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linear1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_like" />

                <TextView
                    android:id="@+id/search_heart_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="좋아요 많은순"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textStyle="italic" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_signs" />

            <TextView
                android:id="@+id/search_woman_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여성들이 작성한"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_man" />

            <TextView
                android:id="@+id/search_man_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="남성들이 작성한"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/search_10age_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10대들이 먹었던"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/search_20age_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20대들이 먹었던"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/search_30age_textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30대들이 먹었던"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/search_40age_textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40대들이 먹었던"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="italic"/>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>