<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/iv_roulette"
        app:srcCompat="@drawable/ic_roulette_bg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_bg"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/iv_roulette"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/iv_arrow"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_roulette" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/ic_arrow" />

    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="182dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/start" />

    <ImageView
        android:id="@+id/roulette_title"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/ic_roulette_title" />

    <Button
        android:id="@+id/rouletteCloseBtn"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:background="@android:color/transparent"
        android:text="X"
        android:textStyle="bold" />

</RelativeLayout>
